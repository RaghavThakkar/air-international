<%- include('../partials/header.ejs'); %>

  <div class="container mt-5">
    <div class="row d-flex justify-content-center">


      <div class="col-lg-4 col-md-6 col-12">
          <h2 class="text-white">Welcome In Survey Chacha</h2>
          <div><lottie-player src="https://assets4.lottiefiles.com/packages/lf20_bjiyivdc.json" background="transparent"
            speed="1" class="small-screen align-center" style="width: 300px; height: 300px;" loop autoplay></lottie-player>
             </div>
        </div>


      <div class="col-lg-8 col-md-6 col-12">

        <!-- message area -->


        <form id="loginForm" novalidate method="POST">

          <div class="card shadow-lg rounded" style="background: transparent;">
            <div class="card-body">
              <h1 class="card-title text-center text-white">Register</h1>
                <p class="hint-text text-center text-white">Create your own account. It's free and only takes a minute.</p>
              <%- include('../partials/footer.ejs'); %>


                <% if(messages.length> 0) { %>
                  <div id="messageArea" class="alert alert-danger">
                    <%= messages %>
                  </div>
                  <% } %>
                    <div class="form-group">
                  <div class="row text-white">
                    <p class="lead"><i class="fas fa-user-shield"></i> Personal Information</p>
                    <div class="col-md-6">
                      <input class="form-control" type="text" name="FirstName" id="firstName" placeholder="First Name" required>
                    </div>
                    <div class="col-md-6">
                      <input class="form-control" type="text" name="LastName" id="lastName" placeholder="Last Name" required>
                    </div>
                  </div>
                </div>
                <div class="form-group  mt-1 ">
                  <div class="row">
                    <div class="col-md-12">
                      <input type="email" class="form-control" id="emailAddress" name="EmailAddress" required
                      value="" placeholder="Email Address">
                    </div>
                  </div>
                </div>

                <div class="form-group mt-4">
                  <div class="row text-white">
                  <p class="lead"><i class="fas fa-database"></i> System Identification</p>
                    
                    <div class="col-md-6">
                      <input type="text" class="form-control" id="username" name="username"  required
                      value="" placeholder="Username">
                    </div>
                  </div>
                </div>
                <div class="form-group mt-1 ">
                  <div class="row">
                    <div class="col-md-12">
                      <input type="password" class="form-control" id="password" name="password"  required
                      value="" placeholder="Password">
                    </div>
                  </div>
                </div>
                <div class="form-group mt-1 ">
                  <div class="row">
                    <div class="col-md-12">
                      <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"  required
                      value="" placeholder="Confirm Password">
                    </div>
                  </div>
                </div>
                 
                                                    
                <div class="text-end">
                  <button id="submitButton" type="submit" class="btn btn-primary">Register</button>
                  <button id="cancelButton" type="reset" class="btn btn-warning"><i class="fas fa-undo fa-lg"></i> Cancel</button>
                </div>

            </div>

            <p class="text-center text-white" style="font-weight: bold; font-size: 18px;">
            Already have an account? 
            <a href="/login" class="text-white">Sign in</a>
          </p>
          </div>


        </form>

      </div>

      


    </div>
  </div>
